<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background3"
    tools:context="embedded.cse.cau.ac.kr.sinkholeproject.SelectCaseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="지반상태를 선택하세요."
            android:textSize="30sp"
            android:textAlignment="center"
            android:layout_marginTop="60dp"
         />

        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_margin="40dp"
            android:padding="0dp"
            android:id="@+id/sinkCase"
            android:text="지표부 함몰"
            android:textSize="30sp"
            android:background="@drawable/button1"
            android:layout_gravity="center"
            android:onClick="sinkCaseClicked"
            />

        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_margin="40dp"
            android:padding="0dp"
            android:id="@+id/holeCase"
            android:text="지중 내 동공 발생"
            android:textSize="30sp"
            android:background="@drawable/button1"
            android:layout_gravity="center"
            android:onClick="holeCaseClicked"
            />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>
